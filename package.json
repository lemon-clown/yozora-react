{
  "name": "@yozora/root",
  "version": "0.0.0",
  "private": true,
  "description": "render md data in react",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora-react.git"
  },
  "homepage": "https://github.com/yozorajs/yozora-react/#readme",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":publish:recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    ":workspace:link": "lerna exec 'yarn link' --concurrency 1",
    ":workspace:unlink": "lerna exec 'yarn unlink' --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:lint:fix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "start": "lerna run start --parallel",
    "test": "lerna run test --concurrency 2",
    "test:coverage": "lerna run test --concurrency 1 -- --coverage",
    "test:update": "lerna run test --concurrency 2 -- -u",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@types/react": "^17.0.50"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@emotion/css": "^11.10.0",
    "@guanghechen/eslint-config": "^2.1.2",
    "@guanghechen/eslint-config-jsx": "^2.1.2",
    "@guanghechen/eslint-config-ts": "^2.1.2",
    "@guanghechen/jest-config": "^2.1.2",
    "@guanghechen/rollup-config-tsx": "^2.1.2",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/buble": "^0.20.1",
    "@types/enzyme": "3.10.12",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "29.2.0",
    "@types/loadable__component": "^5.13.4",
    "@types/node": "18.11.3",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.16",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.7",
    "@yozora/ast": "^2.0.3",
    "@yozora/ast-util": "^2.0.3",
    "cross-env": "7.0.3",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.2",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^10.1.0",
    "gitmoji-changelog": "2.3.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "29.2.1",
    "jest-environment-jsdom": "29.2.1",
    "lerna": "6.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "postcss": "^8.4.18",
    "prettier": "2.7.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "stylus": "^0.59.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4",
    "yarn-deduplicate": "6.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
