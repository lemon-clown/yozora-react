{
  "name": "@yozora/root",
  "version": "0.0.0",
  "private": true,
  "description": "render md data in react",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora-react.git"
  },
  "homepage": "https://github.com/yozorajs/yozora-react/#readme",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":publish:recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    ":workspace:link": "lerna exec 'yarn link' --concurrency 1",
    ":workspace:unlink": "lerna exec 'yarn unlink' --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:lintfix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "start": "lerna run start --parallel",
    "test": "lerna run test --concurrency 2",
    "test:coverage": "lerna run test --concurrency 1 -- --coverage",
    "test:update": "lerna run test --concurrency 2 -- -u",
    "version": "yarn && ghc-doc-link-rewrite --username=yozorajs --repository=yozora && git stage -u yarn.lock **/package.json **/*.md"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.22.11",
    "@emotion/css": "^11.11.2",
    "@guanghechen/conventional-changelog": "^5.0.1",
    "@guanghechen/eslint-config": "^5.0.2",
    "@guanghechen/eslint-config-jsx": "^5.0.5",
    "@guanghechen/eslint-config-ts": "^5.0.6",
    "@guanghechen/jest-config": "^5.0.6",
    "@guanghechen/rollup-config": "^5.2.0",
    "@guanghechen/script-doc-link": "^5.0.8",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/buble": "^0.20.1",
    "@types/jest": "29.5.4",
    "@types/loadable__component": "^5.13.4",
    "@types/node": "18.17.12",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@yozora/ast": "^2.2.0",
    "@yozora/ast-util": "^2.2.0",
    "cross-env": "^7.0.3",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "29.6.4",
    "lerna": "7.1.5",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "postcss": "^8.4.28",
    "prettier": "3.0.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
