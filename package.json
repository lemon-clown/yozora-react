{
  "name": "@yozora/root",
  "version": "0.0.0",
  "private": true,
  "description": "render md data in react",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yozorajs/yozora-react.git"
  },
  "homepage": "https://github.com/yozorajs/yozora-react/#readme",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":publish:recover": "git stash && lerna publish from-package",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    ":workspace:link": "lerna exec 'yarn link' --concurrency 1",
    ":workspace:unlink": "lerna exec 'yarn unlink' --concurrency 1",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:lint:fix": "eslint . --fix",
    "format:prettier": "prettier --write .",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "start": "lerna run start --parallel",
    "test": "lerna run test --concurrency 4",
    "test:coverage": "lerna run test --concurrency 1 -- --coverage",
    "test:update": "lerna run test --parallel -- -u",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@guanghechen/eslint-config": "^1.8.1",
    "@guanghechen/eslint-config-jsx": "^1.8.1",
    "@guanghechen/eslint-config-ts": "^1.8.1",
    "@guanghechen/rollup-config-tsx": "^1.8.1",
    "@types/enzyme": "3.10.9",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "26.0.24",
    "@types/node": "16.6.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.12",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.3",
    "@yozora/ast": "^1.1.0",
    "@yozora/ast-util": "^1.1.0",
    "clsx": "^1.1.1",
    "cross-env": "7.0.3",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "3.4.0",
    "fs-extra": "^10.0.0",
    "gitmoji-changelog": "2.2.1",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.5",
    "lerna": "4.0.0",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "postcss": "^8.3.6",
    "prettier": "2.3.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.56.2",
    "styled-components": "^5.3.0",
    "stylus": "^0.54.8",
    "ts-jest": "26.5.6",
    "ts-node": "10.2.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
