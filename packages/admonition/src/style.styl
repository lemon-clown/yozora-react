.yozora-admonition
  padding: 1em
  border-left: $admonition-border-width solid transparent
  border-radius: 6px
  margin: $margin-block-node
  box-shadow: 0 1px 2px 0 hsla(0deg, 0%, 0%, 0.1)
  color: $admonition-color

  .yozora-admonition__heading
    display: flex
    align-items: flex-start
    line-height: 1.6
    font-size: 0.857rem
    margin: 0 0 8px 0
    vertical-align: middle
    letter-spacing: 1px
    text-rendering: optimizelegibility
    text-size-adjust: 100%
    text-transform: none
    overflow-wrap: break-word
    font-family: system-ui, -apple-system, 'Segoe UI', Roboto, Ubuntu, Cantarell, 'Noto Sans', sans-serif

    .yozora-admonition__heading-icon
      > svg:first-child path
        fill: currentColor

      margin-right: 0.5rem
    .yozora-admonition__heading-title
      display: block
  .yozora-admonition__body
    display: block
  &.yozora-admonition--note
    border-right: 1px solid hsla(0deg, 0%, 0%, 0.1)
    border-color: $admonition-note-color-border
    background-color: $admonition-note-bg

    .yozora-admonition__heading
      color: $admonition-note-color-border
  &.yozora-admonition--info
    border-color: $admonition-info-color-border
    background-color: $admonition-info-bg

    .yozora-admonition__heading
      color: $admonition-info-color-border
  &.yozora-admonition--tip
    border-color: $admonition-tip-color-border
    background-color: $admonition-tip-bg

    .yozora-admonition__heading
      color: $admonition-tip-color-border
  &.yozora-admonition--caution
    border-color: $admonition-caution-color-border
    background-color: $admonition-caution-bg

    .yozora-admonition__heading
      color: $admonition-caution-color-border
  &.yozora-admonition--danger
    border-color: $admonition-danger-color-border
    background-color: $admonition-danger-bg

    .yozora-admonition__heading
      color: $admonition-danger-color-border
