.yozora-heading
  display: flex
  align-items: center
  justify-content: flex-start
  padding: 0
  margin: $margin-block-node
  margin-bottom: 1em
  line-height: 1.25
  font-family: $heading-font-family
  .yozora-heading__content
    flex: 0 1 auto
    min-width: 0
    margin: 0
    overflow: hidden
    text-overflow: ellipsis
    white-space: pre-wrap
    line-height: 1.7
  .yozora-heading__anchor
    flex: 0 0 3rem
    padding-left: 0.5rem
    color: $link-color
    opacity: 0
    transition: color 0.2s ease-in-out, opacity 0.2s ease-in-out
    user-select: none
    text-decoration: none
    > svg
      overflow: hidden
      display: inline-block
      vertical-align: middle
      fill: currentColor
  &:hover
    .yozora-heading__anchor
      opacity: 0.8
      color: $link-color-hover

h1.yozora-heading,
h2.yozora-heading,
h3.yozora-heading,
h4.yozora-heading,
h5.yozora-heading,
h6.yozora-heading
  font-style: normal
  font-weight: 500

h1.yozora-heading,
h2.yozora-heading
  padding: 0.3rem 0
  border-bottom: 1px solid $color-border-secondary

h1.yozora-heading
  font-size: 2rem

h2.yozora-heading
  font-size: 1.5rem

h3.yozora-heading
  font-size: 1.25rem

h4.yozora-heading
  font-size: 1rem

h5.yozora-heading
  font-size: 0.875rem

h6.yozora-heading
  font-size: 0.85rem
