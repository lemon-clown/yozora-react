.yozora-common-copy-button
  display: inline-block
  padding: 0.4rem
  border: none
  outline: none
  color: $common-copy-button-color-waiting
  cursor: pointer
  background: none
  &:hover
    color: $common-copy-button-color-hover
  &:active
    color: $common-copy-button-color-active

  &.yozora-common-copy-button--copying
    color: $common-copy-button-color-copying
  &.yozora-common-copy-button--failed
    color: $common-copy-button-color-failed
  &.yozora-common-copy-button--succeed
    color: $common-copy-button-color-succeed
