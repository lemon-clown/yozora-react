// background colors
$default__color-bg-primary = #fff
$default__color-bg-secondary = #fafbfa
$default__color-bg-tertiary = #f6f8fa

// border colors
$default__color-border-primary = #e1e4e8
$default__color-border-secondary = hsla(216deg, 20%, 80%, 0.92)
$default__color-border-tertiary = #d1d5da

// text colors
$default__color-text-primary = #24292e
$default__color-text-secondary = #586069
$default__color-text-tertiary = #6a737d

// box sizing
$default__margin-block-node = 0 0 1.25em

// Admonition styles
$default__admonition-border-width = 5px
$default__admonition-note-color-border = #d4d5d8
$default__admonition-note-bg = #fdfdfe
$default__admonition-info-color-border = #4cb3d4
$default__admonition-info-bg = #eef9fd
$default__admonition-tip-color-border = #009400
$default__admonition-tip-bg = #e6f6e6
$default__admonition-caution-color-border = #e6a700
$default__admonition-caution-bg = #fff8e6
$default__admonition-danger-color-border = #e13238
$default__admonition-danger-bg = #ffebec

// Code styles
$default__code-bg-primary = #f9f9f9
$default__code-bg-highlight = hsla(210deg, 100%, 84%, 0.2)
$default__code-bg-selection = hsla(200deg, 30%, 70%, 0.3)
$default__code-color-border = hsla(0deg, 0%, 80%, 0.8)
$default__code-color-caret = #ed6c60
$default__code-font-family = Consolas, 'Source Code Pro', 'Roboto Mono', monospace, sans-serif
$default__code-font-size = min(1rem, 18px)
$default__code-live-previewer-bg = #fff

// Delete styles
$default__delete-color = #acb2b9

// Heading styles
$default__heading-font-family = 'Comic Sans MS', 'lucida grande', 'lucida sans unicode', lucida, 'Hiragino Sans GB', 'Helvetica Neue', 'Microsoft Yahei', 'WenQuanYi Micro Hei', sans-serif

// Image styles
$default__image-color-border = #7a6390
$default__image-color-title = #808080

// Link styles
$default__link-color = #4682B4
$default__link-color-hover = #5c9fd6
$default__link-color-active = #5c9fd6

// List task item styles
$default__list-task-item-bg--todo = #f5f5f5
$default__list-task-item-bg--doing = #3399ff
$default__list-task-item-bg--done = #3399ff

// Math styles
$default__math-color = hsl(220, 100%, 32%)

// Table styles
$default__table-bg-thead = #eff0f0
$default__table-bg-row-odd = #fff
$default__table-bg-row-even = #f6f8fa
$default__table-color-border = #dfe2e5
