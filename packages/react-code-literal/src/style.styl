.yozora-code-literal
  display: flex
  flex-direction: column
  justify-content: flex-start
  border: 1px solid #d3d3d3
  background: $code-bg-primary
  caret-color: $code-color-caret

  ::selection
    background: $code-bg-selection
  > .yozora-code-literal__toolbar
    flex: 0 0 auto
    position: relative
    display: flex
    align-items: center
    height: 2rem
    width: 100%
    border-bottom: 1px solid $code-color-border
    cursor: default

    .yozora-code-literal__title
      margin-left: 1rem
      font-family: $heading-font-family
      font-size: 0.9em
      color: $code-color-title
      user-select: none
  > .yozora-code-literal__content
    overflow: auto
    padding: 0
    border: none
    margin: 0
    line-height: 1.33
    font-family: $code-font-family
    font-size: $code-font-size
    background: $code-bg-primary
    white-space: pre-wrap
    overflow-wrap: break-word
    word-spacing: normal
    word-break: break-all
    word-wrap: break-word
    letter-spacing: 1px
    line-height: inherit
    tab-size: 2

    > pre
      margin: 0
      font-family: $code-font-family
      font-size: $code-font-size
      line-height: inherit

      code,
      span
        line-height: inherit
      code
        padding: 0
        margin: 0
        background: transparent
      ::selection
        background: $code-bg-selection
.yozora-code-literal__copy-button
  position: absolute
  right: 1rem
  visibility: hidden
  opacity: 0
  transition: opacity 0.2s ease-in-out
  background: $code-bg-primary
  user-select: none
.yozora-code-literal
  &:hover
    .yozora-code-literal__copy-button
      visibility: visible
      opacity: 1
// Adaptive smaller screen.
+mx-screen-xs()
  .yozora-code-literal
    border: none
    border-radius: 5px
    box-shadow: rgba(30, 30, 30, 73%) 0 2px 10px
    overflow: hidden

    .yozora-code-highlighter__linenos
      display: none
      visibility: hidden
