.yozora-image
  box-sizing: border-box
  max-width: 100% // Prevent images from overflowing the container.
  display: flex
  flex-direction: column
  align-items: center

  > img
    flex: 1 0 auto
    box-sizing: border-box
    max-width: 100%
    border: 1px solid $image-color-border
    box-shadow: 0 0 20px 1px rgba(126, 125, 150, 0.6)
  > figcaption
    text-align: center
    font-style: italic
    font-size: 1em
    color: $image-color-title
