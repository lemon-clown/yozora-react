
.yozora-common-light-buttons
  user-select: none
  .yozora-common-light-button
    display: inline-block
    box-sizing: border-box
    height: 10px
    width: 10px
    border-radius: 50%
    margin-left: 8px

    &.yozora-common-light-button--close
      background-color: #ed6c60
    &.yozora-common-light-button--minimize
      background-color: #f7c151
    &.yozora-common-light-button--maximize
      background-color: #64c856
